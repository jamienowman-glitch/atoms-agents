{
    "contract_version": "2.1.0",
    "meta": {
        "name": "MAYBES Note Canvas",
        "description": "A city-builder style note taking canvas with text and audio nodes."
    },
    "viewport": {
        "type": "infinite",
        "bg_color": "transparent"
    },
    "harness": {
        "top_pill": {
            "left": [
                "space_switcher",
                "surface_switcher"
            ],
            "right": [
                "settings"
            ],
            "left_locked": true
        },
        "chat_rail": {
            "enabled": true,
            "position": "left",
            "width": 320
        },
        "tool_pop": {
            "enabled": false,
            "magnifiers": {
                "left": {
                    "type": "none"
                },
                "right": {
                    "type": "none"
                }
            },
            "settings_notes": "We use ToolPill (Top Center) for this canvas."
        },
        "tool_pill": {
            "enabled": true,
            "long_press_map": {
                "canvas_mode": [
                    "text",
                    "voice",
                    "camera"
                ]
            }
        }
    },
    "atoms": [
        {
            "name": "Note",
            "props": {
                "type": {
                    "type": "select",
                    "options": [
                        "text",
                        "voice"
                    ]
                }
            }
        }
    ]
}